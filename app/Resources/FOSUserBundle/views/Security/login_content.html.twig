{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="row">
    <div class="col-lg-12" style="padding-top: 50px;">

        <div id="collapseOne" class="accordion-body collapse in">
            <div class="accordion-inner">
                <div class="col-lg-4 col-lg-offset-1">

                    {% for flashMessage in app.session.flashbag.get('notification') %}
                        <div class="alert alert-success">{{ flashMessage }}</div>
                    {% endfor%}

                    <h2>Connexion</h2><br>

                    <h4>Pas encore inscrit ?</h4>
                    <em>
                        nous vous invitons à vous inscrire<br />
                        afin de passer votre commande et de manger équilibré.
                    </em>
                    <br /><br />
                    <a href="{{ path("fos_user_registration_register") }}" class="btn btn-primary">S'inscrire</a>

                </div>

                <div class="col-lg-3 col-lg-offset-1">
                    <h4>Connexion</h4>
                    <form action="{{ path("fos_user_security_check") }}" method="post">
                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        {% endif %}
                        <div  class="form-group">
                            <label for="username">{{ 'security.login.username'|trans }}</label>
                            <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" />
                        </div>
                        <div  class="form-group">
                            <label for="password">{{ 'security.login.password'|trans }}</label>
                            <input type="password" id="password" class="form-control" name="_password" required="required" />
                        </div>
                        <div  class="form-group">
                            <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                        </div>
                    </form>
                </div>
                <div class="col-lg-10 col-lg-offset-1">
                    <a href="{{ path("fos_user_resetting_request") }}">Mot de passe perdu ?</a>
                </div>
            </div>
        </div>
    </div>
</div>



