<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Boutique E-commerce{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <meta name="keywords" content="{% block motsCles %}{% endblock %}">
    <meta name="description" content="{% block description %}{% endblock %}">
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css')}}" />
    <link rel="stylesheet" href="{{ asset('css/style.css')}}" />

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">

                <!--<button class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse" type="button">
                     <span class="icon-bar"></span>
                     <span class="icon-bar"></span>
                     <span class="icon-bar"></span>
                 </button> -->
                <div class="row" style="margin-bottom: 10px;">
                    <h3><a class="col-lg-5 col-lg-offset-1" href="{{ path('produits') }}">Boutique E-commerce</a></h3>
                    <div class="col-lg-2 col-lg-offset-3">
                        {% render(controller('EcommerceBundle:Produits:recherche')) %}  
                    </div>
                </div>
            </div>
        </div>
    </div>

<div class="content_block" style="padding-top: 100px;">
    {% block body %}{% endblock %}
</div>


<footer id="footer" class="bg-primary text-white" style="margin: 0;padding: 0;">
    <hr>
    <div class="container-fluid">
        <div class="row">
            <div class="social-bar">
                <div class="col-lg-3">
                    <strong>Reseau sociaux</strong>
                </div>
                <div class="col-lg-3">
                    <a href=""><img src="{{ asset('img/1498308990_thin_B-89.png')}}"></a>
                </div>
                <div class="col-lg-3">
                    <a href=""><img src="{{ asset('img/1498308977__twitter_bird.png')}}"></a>
                </div>
                <div class="col-lg-3">
                    <a href=""><img src="{{ asset('img/1498308967_youtube_online_social_media.png')}}"></a>
                </div>
                <div class=""></div>

            </div>
        </div>
        <hr>

        <div class="row">
            <div class="col-lg-4 col-lg-offset-1  bg-inverse">
                <h4>Informations</h4>
                <ul class="nav nav-stacked">
                    {% render(controller('PagesBundle:Pages:menu')) %}                    
                </ul>
            </div> 


            <div class="col-lg-4">
                <h4>Notre entrep√¥t</h4>
                <p><span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span>&nbsp;{{ adresse }}</p>
            </div>

            <div class="col-lg-2">
                <h4>Nous contacter</h4>
                <p><i class="glyphicon glyphicon-phone"></i>&nbsp;Tel: {{telephone}}</p>
                <p><i class="glyphicon glyphicon-print"></i>&nbsp;Fax: {{ fax }}</p>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4 col-lg-offset-5">
                <p>&copy; Copyright {{ "now"|date('Y') }} - ArnaudAdon</p>
            </div>

        </div>
    </div>
</footer>	
<script src="{{ asset('js/jquery-3.2.1.min.js')}}"></script>
<script src="{{ asset('js/bootstrap.min.js')}}"></script>
{% block javascripts %}{% endblock %}
</body>
</html>
