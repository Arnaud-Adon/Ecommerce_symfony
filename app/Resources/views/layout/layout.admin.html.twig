<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="keywords" content="{% block motsCles %}{% endblock %}">
        <meta name="description" content="{% block description %}{% endblock %}">
        <title>{% block title %}Boutique E-commerce{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.min.css')}}" />
            <link rel="stylesheet" type="text/css" href="{{ asset('css/ecommerceStyle.css')}}" />
        {% endblock %}
    </head>
    <body>
        <div class="container-fluid">
            <!-- header -->

            <div class="navbar">
                <div class="navbar-inner">

                    <div class="admin-nav-top row">
                        <h2 class="col-lg-offset-1">Administration du site</h2>
                    </div>                 
                </div>
            </div>

            <!-- partie principale --> 

            <div class="row">
                <div class="col-lg-12">
                    
                    {% include '::moduleUsed/navigation.admin.html.twig' %}
                  

                    <div class="col-lg-7 col-lg-offset-1">
                        {% block body %}
                        {% endblock %}   
                    </div>
                </div>
            </div>

            <!-- footer -->    

            <hr />

            <footer id="footer">                
                <div class="row">
                    <div class="col-lg-4">
                        <p>&copy; Copyright 2017 - Arnaud Adon</p>
                    </div>
                </div>
            </footer>
        </div>
    </div>       
</body>
</html>       


{% block javascripts %}
    <script src="{{ asset('js/jquery-3.2.1.min.js')}}"></script>
    <script src="{{ asset('js/bootstrap.min.js')}}"></script>
{% endblock %}
</body>
</html>
