{% extends '::layout/layout.admin.html.twig' %}

{% block body %}
    <h1>Produit : {{ produit.nom }}</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{% if produit.disponible %}Oui{% else %}Non{% endif %}</td>
            </tr>
        </tbody>
    </table>

   <div class="col-lg-12">
       <div class="col-lg-4">
            <button class="btn btn-default"><a href="{{ path('adminProduits_index') }}" style="color:#000;text-decoration: none;">Retour Ã  la liste des produits</a></button>
       </div>
       <div class="col-lg-4">
            <button class="btn btn-primary"><a href="{{ path('adminProduits_edit', { 'id': produit.id }) }}" style="color:#fff;text-decoration: none;">Modifier le produit</a></button>
       </div>
       <div class="col-lg-4">
            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Supprimmer le produit">
            {{ form_end(delete_form) }}
       </div>
   </div>  
{% endblock %}
