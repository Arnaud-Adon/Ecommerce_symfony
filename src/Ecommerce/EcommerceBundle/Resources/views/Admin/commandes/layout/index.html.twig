{% extends '::layout/layout.admin.html.twig' %}

{% block body %}
    <h1>Liste des commandes</h1>

    <table class="table table-condensed">
        <thead>
            <tr>               
                <th>Date</th>
                <th>Client</th>          
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for commande in commandes %}
                <tr>                   
                    <td>{% if commande.date %}{{ commande.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{{ commande.utilisateur.username }}</td>                    
                    <td>             
                        <a href="{{ path('adminCommandes_show', { 'id': commande.id }) }}"><i class="glyphicon glyphicon-eye-open"></i></a>
                        <a href="{{ path('adminCommandesFactures', {'id': commande.id}) }}"><i class="glyphicon glyphicon-euro"></i></a>    
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
