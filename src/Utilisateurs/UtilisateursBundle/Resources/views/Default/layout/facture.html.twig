{% extends "::layout/layout.html.twig" %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-3">
        {% include '::moduleUsed/navigation.html.twig' %}       
        {% include 'UtilisateursBundle:Default:moduleUsed/utilisateursConnect.html.twig' %}
        </div>

        <div class="col-lg-9">
            <h2>Factures</h2>
            <form>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Références</th>
                            <th>Date</th>
                            <th>Prix TTC</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                       {% if factures|length == 0 %}
                           <tr>
                               <td colspan=""><center>Vous n'avez aucune facture</center></td>
                           </tr> 
                       {% endif %}
                       
                       {% for facture in factures %}
                        <tr>
                            <td><a href="#">{{ facture.reference}}</a></td>
                            <td>{{ facture.date|date('d/m/Y') }}</td>
                            <td>{{ facture.commande.prixTTC }} €</td>
                            <td><a href="#"><i class="glyphicon glyphicon-refresh"></i></a></td>
                        </tr>
                        {% endfor %}
                       
                    </tbody>
                </table>
            </form>

        </div>

    </div>
</div>
                            
{% endblock %}
